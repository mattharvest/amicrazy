	<%= semantic_form_for @user do |f| %>
		<%= f.semantic_errors %>
		<%= f.inputs do %>
			<%= f.input :name %>
			<%= f.input :email %>
			<%= f.input :twitter %>
			<%= f.input :password %>
			<%= f.input :password_confirmation %>
		<% end %>
		<%= f.actions do %>
			<%= f.action(:submit) %>
		<% end %>
	<% end %>